<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <com.magical.view.MagicalBtnLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Hello World!" />
    </com.magical.view.MagicalBtnLayout>

    <com.magical.view.MagicalBtnLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:defaultColor="#50ff7700"
        app:pressedColor="#ff7700">

        <TextView
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Hello World!" />
    </com.magical.view.MagicalBtnLayout>

    <com.magical.view.MagicalBtnLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:defaultColor="#50ff7700"
        app:pressedColor="#ff7700"
        app:rounded="5dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Hello World!" />
    </com.magical.view.MagicalBtnLayout>

    <com.magical.view.MagicalBtnLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:defaultColor="#50ff7700"
        app:leftBottomRounded="10dp"
        app:pressedColor="#ff7700"
        app:rightBottomRounded="10dp"
        app:rounded="5dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Hello World!" />
    </com.magical.view.MagicalBtnLayout>

    <com.magical.view.MagicalBtnLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:defaultColor="#50ff7700"
        app:leftBottomRounded="5dp"
        app:leftTopRounded="5dp"
        app:pressedColor="#ff7700"
        app:rightBottomRounded="5dp"
        app:rightTopRounded="5dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Hello World!" />
    </com.magical.view.MagicalBtnLayout>

    <com.magical.view.MagicalBtnLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:defaultColor="#50ff7700"
        app:leftBottomRounded="10dp"
        app:leftTopRounded="5dp"
        app:pressedColor="#ff7700"
        app:rightBottomRounded="10dp"
        app:rightTopRounded="5dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Hello World!" />
    </com.magical.view.MagicalBtnLayout>
</LinearLayout>
